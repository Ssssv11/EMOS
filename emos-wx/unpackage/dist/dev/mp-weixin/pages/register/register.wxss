.register-img {
  width: 70%;
  display: block;
  margin-left: auto;
  margin-right: auto;
  margin-top: 80rpx;
}
.register-container {
  width: 70%;
  margin-top: 150rpx;
  margin-left: auto;
  margin-right: auto;
}
.register-container .register-code {
  border: solid 1rpx #e0e0e0;
  border-radius: 25rpx;
  font-size: 30rpx;
  color: #333;
  text-align: center;
  background-color: #f5f5f5;
  margin-bottom: 30rpx;
  height: 80rpx;
  padding: 0 20rpx;
}
.register-container .register-desc {
  color: #999;
  font-size: 25rpx;
  line-height: 1.5;
  margin-bottom: 80rpx;
}
.register-container .register-btn {
  background-color: #3474FF;
  color: #fff;
}
.register-container .register-btn:active {
  background-color: #0052FF;
}
.login-text {
  position: absolute;
  bottom: 50rpx;
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #333;
}
.login-text .login {
  color: #3474FF;
}

